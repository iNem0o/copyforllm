{
  "name": "copyforllm",
  "repository": {
    "type": "git",
    "url": "https://github.com/iNem0o/copyforllm"
  },
  "displayName": "CopyForLLM",
  "description": "Copy file content as markdown for LLM prompts",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyforllm.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "copyforllm.copyAsPrompt",
        "title": "Copy as Prompt"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copyforllm.copyAsPrompt",
          "group": "clipboard"
        }
      ],
      "editor/context": [
        {
          "command": "copyforllm.copyAsPrompt",
          "group": "clipboard",
          "when": "editorFocus"
        }
      ],
      "view/item/context": [
        {
          "command": "copyforllm.copyAsPrompt",
          "group": "clipboard"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
